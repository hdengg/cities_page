<% include partials/header %>

 <div class="container">
	 <header class="jumbotron">
	 	<div class="container">
	 	<h1>Welcome to the Cities Page</h1>
		 	<p>View our hand-picked cities from all over the world</p>
		 	<p>
		 		<a class="btn btn-primary btn-lg" href="/cities/new">Add New City!</a>
		 	</p>
		 </div>
	 </header>

	 <div class="row text-center" style="display:flex; flex-wrap: wrap;">
			<% cities.forEach(function(city) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= city.image %>">
					<div class="caption">
						<h4><%= city.name %></h4>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%include partials/footer %>